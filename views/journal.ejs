<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Journal</title>
    <link rel="stylesheet" type="text/css" href="/css/journal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <a href="/events/<%= event.id %>" id="homeIcon"><i class="fas fa-home"></i></a>
        <nav>
            <ul>
                <li><a href="/events/<%= event.id %>/travelAndlodging">TRAVEL & LODGING</a></li>
                <li><a href="/events/<%= event.id %>/activities">ACTIVITIES</a></li>
                <li><a href="/events/<%= event.id %>/journal">JOURNAL</a></li>
                <li><a href="/events/<%= event.id %>/media">MEDIA</a></li>
                <li><a href="/events/<%= event.id %>/schedule">SCHEDULE</a></li>
                <li><a href="/events/<%= event.id %>/qAnda">Q&A</a></li>
            </ul>
        </nav>
    </header>

    <!-- photos -->
    <main>
        <section>
            <h1>Journal</h1>
            <h3>Read and tell your own stories of <%= user.firstName %></h3>
        </section>
        <section class="journal-section">
            <div class="pink-section"></div>
            <div class="green-section"></div>
            <div class="yellow-section-tab">
                <div class="journal-name">Stories and Toasts</div>
            </div>
            <div class="yellow-section">
                <div id="stories" class="journal-container-with-buttons">
                    <div class="journal-container-without-buttons">
                        <div class="journal-entries">
                            <% for(var i=0; i<journalEntries.length; i++) { %>
                                <div class="journal-entry">
                                    <h4><%= journalEntries[i].storyTitle %></h4>
                                    <p><%= journalEntries[i].story %></p>
                                </div>
                            <% } %>
                        </div>
                        <div class="journal-empty-space-container">
                            <div class="journal-empty-space"></div>
                            <div class="journal-empty-space"></div>
                            <div class="journal-empty-space"></div>
                            <div class="journal-empty-space"></div>
                        </div>
                    </div>
                    <div class="journal-buttons-container">
                        <div class="add-journal-entry-button-container">
                            <button onclick="addStory()">+ Add</button>
                        </div>
                        <div class="scroll-journal-button" id="journalScrollIcon">
                            <i class="fas fa-arrow-down"></i>
                        </div>
                    </div>
                </div>

                <form 
                    action="/events/<%= event.id %>/journal/createJournalPost" 
                    enctype="application/x-www-form-urlencoded"
                    method="POST" 
                    class="add-journal-entry-container disabled" 
                    id="addJournalEntry"
                >
                    <div class="add-journal-entry-white-container">
                        <label for="storyTitle" class="form-label">Story Title</label>
                        <input type="text" name="storyTitle" id="storyTitle" class="form-control">
                        <label for="story" class="form-label">Story</label>
                        <textarea name="story" id="story" class="form-control" cols="30" rows="10"></textarea>
                    </div>
                    <div class="add-journal-entry-container-button">
                        <button type="submit" id="postJournal" disabled>POST</button>
                        <button onclick="showStories()">CANCEL</button>
                    </div>
                </form>
            </div>
        </section>
    </main>

    <!-- footer on the left hand-side of the page -->
    <footer>
        <ul>
            <li><a href="/aboutus">About Us</a></li>
            <li><a href="/inspiration">Inspiration</a></li>
            <li><a href="/createYourOwnEvent">Create Your Own Event</a></li>
            <li><a href="/helpAndSupport">Help & Support</a></li>
        </ul>
    </footer>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="js/main.js"></script>
    <script type="text/javascript" src="js/journal.js"></script>

</body>
</html>